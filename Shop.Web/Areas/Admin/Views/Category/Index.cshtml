
@model IEnumerable<Category>


@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div>
    <a href="Admin/Category/create" class="btn btn-success">Create</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Created time</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CratedOn</td>
                <td>
                    <a href="Admin/Category/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="Admin/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
           
            </tr>
        }
    </tbody>
</table>